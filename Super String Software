    public void reset(){
        tfLength.setText("");
        tfCapital.setText("");
        tf4th.setText("");
        tfIdentical1.setText("");
        tfIdentical2.setText("");
        tfLetter.setText("");
        tfLetter2.setText("");
        tf4to6.setText("");
        tfReplace.setText("");
        
        lblResultLength.setText("...");
        lblResult4th.setText("...");
        lblResultCapital.setText("...");
        lblResultIdentical.setText("...");
        lblResultLetter.setText("...");
        lblResult4to6.setText("...");
        lblResultReplace.setText("...");
        
    }
    private void tfLengthActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
    }                                        

    private void btnLengthActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String str = tfLength.getText();
        reset();
        tfLength.setText("" + str);
        
        lblResultLength.setText(String.valueOf(str.length()));    }                                         

    private void tfCapitalActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void btnCapitalActionPerformed(java.awt.event.ActionEvent evt) {                                           
        String str = tfCapital.getText();
        reset();
        tfCapital.setText("" + str);
        lblResultCapital.setText("" + str.toUpperCase());
    }                                          

    private void tf4thActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
    }                                     

    private void btn4thActionPerformed(java.awt.event.ActionEvent evt) {                                       
        String str = tf4th.getText();
        reset();
        tf4th.setText(""+ str);
        if (str.length()>=4) 
        lblResult4th.setText("" + str.substring(3,4));
    }                                      

    private void tfIdentical1ActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
    }                                            

    private void tfIdentical2ActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
    }                                            

    private void btnIdenticalActionPerformed(java.awt.event.ActionEvent evt) {                                             
        String str = tfIdentical1.getText();
        String str2 = tfIdentical2.getText();
        reset();
        tfIdentical1.setText("" + str);
        tfIdentical2.setText("" + str2);
        if (str.equals(str2)){
            lblResultIdentical.setText("YES");
        }
        else {
            lblResultIdentical.setText("NO");
        }
    }                                            

    private void tfLetterActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
    }                                        

    private void tfLetter2ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void btnLetterActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String str = tfLetter.getText();
        String letter = tfLetter2.getText();
        reset();
        tfLetter.setText("" + str);
        tfLetter2.setText("" + letter);
        for (int i = 0; i<str.length();i++) {
            if (str.substring(i,i+1).toLowerCase().equals(letter.toLowerCase())) {
                lblResultLetter.setText("YES");
                break;
            }
            else {
                lblResultLetter.setText("NO");
            }
        }
        
    }                                         

    private void tf4to6ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
    }                                      

    private void btn4to6ActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String str = tf4to6.getText();
        reset();
        tf4to6.setText(""+str);
        if (str.length()>=8) {
            lblResult4to6.setText(str.substring(3,6));
        }
    }                                       

    private void tfReplaceActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void btnReplaceActionPerformed(java.awt.event.ActionEvent evt) {                                           
        String str = tfReplace.getText();
        reset();
        tfReplace.setText(""+ str);
        String a = "";
        for (int i = 0; i < str.length(); i++) {
            if (str.substring(i,i+1).equals("a")){
                a = a + "x";
            }
            else if (str.substring(i,i+1).equals("A")) {
                a = a + "X";
            }
            else {
                a = a + str.substring(i,i+1);
            }
        }
        lblResultReplace.setText("" + a);
    }                                          

    private void btnResetActionPerformed(java.awt.event.ActionEvent evt) {                                         
        reset();
    }                                        

